<ScrollView android:id="@+id/main" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6F7D7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="#C6F7D7">

        <ImageView
            android:id="@+id/imgSignIn"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/signin_image"
            android:layout_marginBottom="32dp"
            android:contentDescription="SignIn Image" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="#000000"
            android:textColorHint="#BFFFFFFF"
            android:fontFamily="@font/abhayalibreextrabold"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#000000"
            android:textColorHint="#BFFFFFFF"
            android:fontFamily="@font/abhayalibreextrabold"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:backgroundTint="#56C88D"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/abhayalibreextrabold"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>
